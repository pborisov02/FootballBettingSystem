@model WithdrawWalletFundsFormModel
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="WithdrawAmount"></label>
				<input asp-for="WithdrawAmount" class="form-control" placeholder="Withdraw Ammount">
				<span asp-validation-for="WithdrawAmount" class="small text-danger"></span>
			</div>
			@{
				if (!ViewData.ModelState.IsValid)
				{
					<div class="alert alert-danger">
						@Html.ValidationSummary(false, "", new { @class = "text-danger" })
					</div>
				}
			}

			<div class="text-center">
				<input class="btn btn-primary mt-3 w-100" type="submit" value="Withdraw" />
			</div>
		</form>
	</div>
</div>

