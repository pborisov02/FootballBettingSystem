@model BetViewModel

<link rel="stylesheet" href="~/css/single_bet_stylesheet.css" asp-append-version="true" />
<ul>
@foreach(var game in Model.Games)
{
		string result = "notf";
	string predictionVar = string.Empty;
	if(!game.isFinished)
			predictionVar = "notf";
	else
		result = game.Prediction == game.Result ? "win" : "lose";
	switch(game.Prediction)
	{
		case 0:
			predictionVar = "draw";
			break;
		case 1:
			predictionVar = "home";
			break;
		case 2:
			predictionVar = "away";
			break;
	}
	<li>
	<div class="betCard" id="@result">
		<div class="betCard__content">
			<div class="homeTeam">@game.HomeTeam.Name</div>
			<div class="awayTeam">@game.AwayTeam.Name</div>
			<div class="vs">vs</div>
			<div class="predictionTxt">Prediction:</div>
			<div class="prediction">@predictionVar</div>
			@if (game.isFinished)
			{
				<div class="awayGoals">@game.AwayGoals</div>
				<div class="homeGoals">@game.HomeGoals</div>
			}
		</div>
	</div>
	</li>
}
</ul>
