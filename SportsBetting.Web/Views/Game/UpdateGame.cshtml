@model GameUpdateServiceModel

<h2>@Model.HomeTeam.Name vs @Model.AwayTeam.Name</h2>
<h3>@Model.League</h3>
<h3>@Model.Start.ToString("dd/MM")</h3>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		@if (Model.IsFinished)
		{
			<p>WARNING! The game you will try to update now has already been updated. Please make sure this is the game you want to update!</p>
		}
		<form method="post">
			<div class="form-group">
				<label asp-for="HomeGoals"></label>
				<input asp-for="HomeGoals" class="form-control" placeholder="@Model.HomeTeam.Name goals">
				<span asp-validation-for="HomeGoals" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AwayGoals"></label>
				<input asp-for="AwayGoals" class="form-control"
					   placeholder="@Model.AwayTeam.Name goals">
				<span asp-validation-for="AwayGoals" class="small text-danger"></span>
			</div>
			<input type="hidden" asp-for="Id" />
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Update" />
			</div>
		</form>
	</div>
</div>