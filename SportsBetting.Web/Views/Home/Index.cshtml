@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@{
    string year = "";
    if (DateTime.UtcNow.Year > 2023) year = "- " + DateTime.UtcNow.Year.ToString();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftBet</title>
    <link rel="stylesheet" href="~/css/nav_button_style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportsBetting.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home_background_stylesheet.css" asp-append-version="true" />
</head>
<body style="background-image: url(/imgs/home_background.jpg); background-size: cover;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SoftBet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="myElement" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <button id="myElement">
                                <a class="button_top nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </button>
                        </li>
                        <li class="nav-item">
                            <button id="myElement">
                                <a class="button_top nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Show">Games</a>
                            </button>
                        </li>
                        <li class="nav-item">
                            <button id="myElement">
                                <a class="button_top nav-link text-dark" asp-area="" asp-controller="Leagues" asp-action="All">Leagues</a>
                            </button>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Add</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-controller="League" asp-action="Add">League</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Team" asp-action="Add">Team</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Add">Game</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="text-center">
                <h1 class="display-4">Welcome to SoftBet</h1>
                <p>The best site for football bets!</p>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;SoftBet 2023 @year
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
