@model GameUpdateServiceModel;
<a class="card" asp-action="UpdateGame" asp-controller="Game" asp-route-gameId="@Model.Id">
	<div class="home">@Model.HomeTeam.Name</div>
	<div class="away">@Model.AwayTeam.Name</div>
	<div class="vs">vs</div>
	<div class="time">@Model.Start.ToString("MM/dd/yyyy h:mm tt")</div>
</a>